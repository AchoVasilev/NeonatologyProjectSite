@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="fas fa-sign-out-alt"></i>
                    <p>Излез</p>
                </button>
            </form>
        </li>
        <li class="nav-item">
            <a asp-area="Identity"
               asp-page="/Account/Manage/ChangePassword"><i class="fas fa-key"></i>Промени парола</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark hvr-grow" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark hvr-grow" asp-area="Identity" asp-page="/Account/Login">Влез</a>
        </li>
    }
</ul>
