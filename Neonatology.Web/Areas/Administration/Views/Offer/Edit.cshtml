@model EditOfferFormModel

@{
    ViewBag.Title = "Добави услуга";
}
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
    </div>
    <form class="form-horizontal" method="post">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Име</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label">Цена</label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" placeholder="@Model.Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Изпрати</button>
            <a asp-area="Administration" asp-controller="Offer" asp-action="All" class="btn btn-default float-right">Откажи</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}