@model ICollection<OfferViewModel>
@{
    ViewBag.Title = "Нашите услуги";
    var i = 1;
}

@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-success" id="locationMessage">@TempData["Message"]</div>
}

@section head{
<style type="text/css">
    body {
        background-image: url('/img/services.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }
</style>
}

<div class="container jumbotron-opacity pb-4 mb-4">
    <div class="pb-4 mb-4">
    <h1 class="text-center">@ViewBag.Title</h1>

    <hr />

    @if (!Model.Any())
    {

        <h3 style="margin-top:2%">
            Все още няма записани услуги
        </h3>
    }
    else
    {
        <div class="mb-4 pb-4">
        <table class="table table-bordered table-striped pb-4 mb-4">
            <thead class="thead-light">
                <tr>
                    <th scope="col">&#8470;</th>
                    <th scope="col">Вид услуга</th>
                    <th scope="col">Цена (лв.)</th>
                </tr>
            </thead>
            <tbody class="pb-4 mb-4">
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@offer.Name</td>
                        <td>@offer.Price</td>
                    </tr>

                    i++;
                }
            </tbody>
        </table>
        </div>
    }
    </div>
</div>