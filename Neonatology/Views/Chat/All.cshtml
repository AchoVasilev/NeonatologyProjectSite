@model ChatUserViewModel

@section head{
<style type="text/css">
    body {
        background-image: url('https://res.cloudinary.com/dpo3vbxnl/image/upload/v1641585449/pediamed/onlineConsultation_vyvebl.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: 1600px 850px;
    }
</style>
}

@{
    ViewBag.Title = "Съобщения";
}

<div class="col-6">
    <a class="btn btn-success" asp-area="" asp-controller="Chat" asp-action="WithUser" asp-route-username="@Model.DoctorEmail" asp-route-group="@Model.GroupName">
        Онлайн консултация
    </a>
</div>

<div class="container-fluid mt-3 jumbotron-opacity">
    <div class="col-md-12">
        <h1 class="text-center">
            @ViewBag.Title

            <hr />
        </h1>
        <div class="row">
            <vc:chat-conversations></vc:chat-conversations>
        </div>
    </div>
</div>

