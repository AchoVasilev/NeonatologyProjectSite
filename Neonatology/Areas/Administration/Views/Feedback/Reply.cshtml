@model FeedbackReplyModel

@{
    ViewData["Title"] = $"Отговор на {Model.Subject}";
}

@section Styles{
    <link type="text/css" href="~/css/contactForm.css" />
}

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form method="post">
        <h3>@ViewData["Title"]</h3>
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Subject" type="text" name="txtEmail" class="form-control" placeholder="@Model.Subject" value="" />
                </div>
                <div class="form-group">
                    <input asp-for="ReceiverEmail" type="text" name="txtEmail" class="form-control" placeholder="@Model.ReceiverEmail" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btn btn-primary hvr-grow" value="Изпрати" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea asp-for="Text" name="txtMsg" class="form-control" 
                    placeholder="Уважаеми господин/госпожо @Model.ReceiverFirstName @Model.ReceiverLastName" style="width: 100%; height: 150px;">
                    </textarea>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
}