<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <link rel="stylesheet" href="~/adminLte/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/adminLte/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
    @await RenderSectionAsync("Styles", required: false)

    <title>@Common.GlobalConstants.SystemAdministrationName</title>
</head>
<body class="hold-transition sidebar-mini">
    @await RenderSectionAsync("head", required: false)
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="nav-link">Начало</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/hangfire" class="nav-link">Hangfire</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/img/logo.png" alt="Pediamed Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Педиамед</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/admin.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <span class="d-block" style="color: white">@this.User.Identity.Name</span>
                    </div>
                </div>
                <partial name="_LoginPartial" />

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Всички страници
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="User" asp-action="All" class="nav-link active">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Потребители</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="Rating" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Всички оценки</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="Gallery" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Галерия</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="Offer" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Всички услуги</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="Appointment" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Всички часове</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Administration" asp-controller="Feedback" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Всички обратни връзки</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
                <div class="p-3">
                    <h5>Title</h5>
                    <p>Sidebar content</p>
                </div>
            </aside>
            <!-- /.control-sidebar -->
            <!-- Main Footer -->
        </div>
    </div>
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            Anything you want
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminLte/dist/js/adminlte.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>